package morseCode;

import java.util.ArrayList;
import java.util.Arrays;

public class Morse {

	static String[] alphabet = new String[] { "a", "b", "c", "d", "e", "f", "g", "h", "i","j","k","l","m","n","o","p","q","r","s","t","u","v","w","x","y","z"," " };
	static String[] morseCode = new String[] { ".- ", "-... ","-.-. ", "-.. ",". ","..-. ","--. ",".... ",".. ",".--- ","-.- ",".-.. ","-- ","-.", "---",".--. ", "--.- ", ".-. ", "... ", "-", "..- ", "...- ", ".-- ", "-..- ", "-.-- ", "--.. ", "/ " };

	public static void translateToMorse(String input) {
		
		String translation;
		translation = morseCode[Arrays.asList(alphabet).indexOf(input)];

	}

}
